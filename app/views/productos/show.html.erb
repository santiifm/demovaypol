<div class="container text-center">
  <p style="color: green"><%= notice %></p>

  <p>
    <strong>Nombre del Producto:</strong>
    <%= @producto.nombreProd%>
    <strong>Precio:</strong>
    <%= @producto.precio%>
    <strong>Stock:</strong>
    <%= @producto.stock%>
    <strong>Creado Por:</strong>
    <%= @producto.creado_por%>
  </p>
  <p>
    <%= link_to "Editar", edit_producto_path(@producto), class:"btn btn-dark" %>
    <%= link_to "Eliminar", @producto, method: :delete, data: {confirm: "Estas Seguro?"}, class:"btn btn-dark"%>
    <div>
      <%= link_to "Volver a productos", productos_path, class:"btn btn-dark" %>
    </div>
  </p>
</div>
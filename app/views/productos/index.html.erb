<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Productos</h1>

  <div id="productos">
    <table class="table table-dark table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Stock</th>
          <th>Creado por</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @productos.each do |producto| %>
          <tr>
            <td><p class="mt-1"><%= producto.nombreProd%></p></td>
            <td>$<%= producto.precio%></td>
            <td><%= producto.stock%></td>
            <td><%= producto.creado_por%></td>
            <td>
            <% if producto.creado_por == current_user.name%>
              <div class="ms-auto">
                <%= link_to "Editar", edit_producto_path(producto), class:"btn btn-sm btn-dark mb-1"%>
                <%=  button_to "Eliminar", producto, method: :delete, data: {confirm: "Estas Seguro?"}, class:"btn btn-sm btn-dark"%>
              </div>
            <% else %>
              <div class="ms-auto">
                <%= button_to "Editar", edit_producto_path(producto), class:"btn btn-sm btn-dark mb-1", :disabled => true %>
                <%=  button_to "Eliminar", producto, method: :delete, data: {confirm: "Estas Seguro?"}, class:"btn btn-sm btn-dark", :disabled => true %>
              </div>
            <% end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>

  <%= link_to "Nuevo producto", new_producto_path, class: "btn btn-dark" %>
</div>